{
  "name": "obs-midi-mixer",
  "version": "1.0.0",
  "description": "Bereinigter MIDI-controlled audio mixer f√ºr OBS Studio streaming",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": ["obs", "midi", "audio", "streaming", "mixer"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "obs-websocket-js": "^5.0.6",
    "webmidi": "^3.1.8"
  },
  "build": {
    "appId": "com.miiiidi.obs-midi-mixer",
    "productName": "OBS MIDI Mixer (Cleaned)",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/config/",
        "to": "config/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "OBS-MIDI-Mixer-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OBS MIDI Mixer"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "AudioVideo"
    }
  }
}